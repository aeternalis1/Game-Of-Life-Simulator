#: import Spinner kivy.uix.spinner
#: import Slider kivy.uix.slider
#: import CheckBox kivy.uix.checkbox

ToolBar:

<Toolbar>
    orientation: "horizontal"
    size_hint: None,None
    spacing: '5dp'
    padding: '5dp'
    pos: (0,550)
    Label:
        text: "Placing:"
        size_hint: None,None
        height: '35dp'
        width: '70dp'
    Spinner:
        text: "Live cell"
        values: ["Live cell","Dead cell"]
        id: spinner_id
        on_text: root.spinner_clicked(spinner_id.text)
        size_hint: None,None
        height: '35dp'
        sync_height: True
    Button:
        text: "Randomize Grid"
        on_press: root.randomize()
        height: '35dp'
        size_hint: None,None
        width: '120dp'
    Button:
        text: "Reset"
        on_press: root.clear()
        height: '35dp'
        size_hint: None,None
        width: '80dp'
    Button:
        text: "Simulate!"
        on_press: root.sim()
        height: '35dp'
        size_hint: None,None
        width: '90dp'
    Label:
        text: "Alive: "+root.atext+"\nGeneration: "+root.gtext
        size_hint: None,None
        height: '35dp'
        width: '130dp'
    Label:
        text: "Wrap"
        size_hint: None,None
        height: '35dp'
        width: '25dp'
    CheckBox
        on_active: root.wrap_check()
        size_hint: None,None
        height: '35dp'
        width: '50dp'